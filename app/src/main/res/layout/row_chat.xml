<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_assistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_assistant"
        android:padding="@dimen/_10sdp">

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/tv_assistant_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/sfprodisplaythin"
            android:textColor="@color/colorWhite"
            tools:text="bjhbjhjnjnjhbh" />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/halloweenLottie"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/ll_assistant"
        android:background="@drawable/bg_message_assistant"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_url="https://assets3.lottiefiles.com/packages/lf20_nZBVpi.json" />

    <LinearLayout
        android:layout_gravity="end"
        android:id="@+id/ll_user"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_message_user"
        android:padding="@dimen/_10sdp"
        android:visibility="visible">

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/tv_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/sfprodisplaythin"
            android:textColor="@color/colorWhite"
            tools:text="bjhbjhjnjnjhbh" />
    </LinearLayout>

</LinearLayout>